<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Post Pet Information</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }

    .container {
      margin-top: 3rem;
    }

    h1, h2 {
      color: #343a40;
      margin-bottom: 1.5rem;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: bold;
    }

    h2 {
      font-size: 2rem;
      font-weight: bold;
    }

    .card {
      border-radius: 0.75rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #ffffff;
      border: 1px solid #dee2e6;
    }

    .card-body {
      padding: 1.5rem;
    }

    .btn-success {
      width: 100%;
      font-size: 1rem;
      font-weight: bold;
      border-radius: 0.5rem;
      padding: 0.75rem;
    }

    .btn-success:hover {
      background-color: #28a745;
      border-color: #28a745;
    }

    .row {
      margin-top: 1.5rem;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Pet Informations</h1>

    <% if (locals.pets && pets.length > 0) { %>
    <div class="row">
      <% pets.forEach((pet) => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title mb-3"><%= pet.animal %></h3>
              <% if (pet.image) { %>
                  <img src="data:image/jpeg;base64,<%= Buffer.from(pet.image).toString('base64') %>" class="card-img" alt="<%= pet.animal %>">
                <% } %>
              <p><strong>Breed:</strong> <%= pet.breed %></p>
              <p><strong>State:</strong> <%= pet.state %></p>
              <p><strong>City:</strong> <%= pet.city %></p>
              <p><strong>Street:</strong> <%= pet.street %></p>
              <p><strong>Pincode:</strong> <%= pet.pincode %></p>

              <form action="/interested" method="post">
                <input type="hidden" name="pet" value="<%= pet.id %>">
                <button type="submit" class="btn btn-primary">Interested</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
